<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">


            <gradient
                android:startColor="#2C9E32"
                android:endColor="#120A0A"/>
            <corners
                android:radius="11dp"/>
        </shape>


    </item>
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">


            <gradient
                android:startColor="#03FA10"
                android:endColor="#393636"/>
            <corners
                android:radius="11dp"/>
        </shape>


    </item>
</selector>