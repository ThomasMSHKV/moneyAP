<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money"
        android:fontFamily="cursive"
        android:textSize="100dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/firstText"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/firstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonPanel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:text="@string/title"
        android:textSize="35sp"
        android:background="@android:color/background_dark"
        android:textColor="#F4F4F4"
        android:padding="5dp"
        android:textStyle="bold"
        android:fontFamily="serif"/>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dollarBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botton"
            android:text="@string/dollarBtn"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/euroBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:text="@string/euroBtn"
            />
        <Button
            android:id="@+id/webViewBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/web_button"
            android:text="@string/web"
            />





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>